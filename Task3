import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class TemperatureConverter {

    private JFrame mainFrame;
    private JLabel headerLabel;
    private JLabel statusLabel;
    private JPanel controlPanel;
    private JTextField temperatureText;
    private JRadioButton fahrenheitButton;
    private JRadioButton celsiusButton;
    private JButton convertButton;

    public TemperatureConverter() {
        prepareGUI();
    }

    public static void main(String[] args) {
        TemperatureConverter tc = new TemperatureConverter();
        tc.showTemperatureConverter();
    }

    private void prepareGUI() {
        mainFrame = new JFrame("Temperature Converter");
        mainFrame.setSize(400, 400);
        mainFrame.setLayout(new GridLayout(3, 1));

        headerLabel = new JLabel("", JLabel.CENTER);
        statusLabel = new JLabel("", JLabel.CENTER);
        statusLabel.setSize(350, 100);

        mainFrame.addWindowListener(new WindowAdapter() {
            public void windowClosing(WindowEvent windowEvent) {
                System.exit(0);
            }
        });

        controlPanel = new JPanel();
        controlPanel.setLayout(new FlowLayout());

        mainFrame.add(headerLabel);
        mainFrame.add(controlPanel);
        mainFrame.add(statusLabel);
        mainFrame.setVisible(true);
    }

    private void showTemperatureConverter() {
        headerLabel.setText("Temperature Converter");
        temperatureText = new JTextField(10);
        fahrenheitButton = new JRadioButton("Fahrenheit", true);
        celsiusButton = new JRadioButton("Celsius");
        convertButton = new JButton("Convert");

        ButtonGroup temperatureGroup = new ButtonGroup();
        temperatureGroup.add(fahrenheitButton);
        temperatureGroup.add(celsiusButton);

        convertButton.addActionListener(new ButtonClickListener());

        controlPanel.add(temperatureText);
        controlPanel.add(fahrenheitButton);
        controlPanel.add(celsiusButton);
        controlPanel.add(convertButton);

        mainFrame.setVisible(true);
    }

    private class ButtonClickListener implements ActionListener {
        public void actionPerformed(ActionEvent e) {
            try {
                double temperature = Double.parseDouble(temperatureText.getText());
                if (fahrenheitButton.isSelected()) {
                    double celsius = (temperature - 32) * 5 / 9;
                    statusLabel.setText(temperature + " Fahrenheit = " + celsius + " Celsius");
                } else {
                    double fahrenheit = temperature * 9 / 5 + 32;
                    statusLabel.setText(temperature + " Celsius = " + fahrenheit + " Fahrenheit");
                }
            } catch (NumberFormatException ex) {
                statusLabel.setText("Invalid input. Please enter a number.");
            }
        }
    }
}
